<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<% if @lists.exists? %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th> List Name </th>
        <th> Items Count </th>
        <th colspan="4"> Actions </th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.name %></td>
          <td><%= list.list_items.count %></td>

          <td><%= link_to 'Show', list %></td>
          <td><%= link_to 'Edit', edit_list_path(list) %></td>

          <!-- Todo: Make Button  -->
          <td><%= link_to 'Destroy', soft_delete_list_path(list), method: :delete, data: { confirm: 'Are you sure? This will soft delete the list and all its list_items.' } %></td>
          <!-- Todo: Make Button  -->
          <td><%= link_to 'Delete', list, method: :delete, data: { confirm: 'Are you sure? This will permanently delete the list and all its list_items.' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h3>There are no lists present.</h3>
<% end %>

<br>

<%= link_to 'New List', new_list_path %>

<br>
<%= link_to 'View Trash', trashed_lists_path %>

<div style="float: right;">
  <%= will_paginate @lists %>
</div>
