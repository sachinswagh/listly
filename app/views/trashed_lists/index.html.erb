<p id="notice"><%= notice %></p>

<h1> Trash </h1>

<% if @lists.exists? %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th> List Name </th>
        <th> Items Count </th>
        <th colspan="4"> Actions </th>
      </tr>
    </thead>

    <tbody>
      <% @lists.each do |list| %>
        <tr>
          <td><%= list.name %></td>
          <td><%= list.list_items.count %></td>
          <td><%= link_to 'Show', trashed_list_path(list) %></td>

          <!-- Todo: Make Button  -->
          <td><%= link_to 'Restore', restore_trashed_list_path(list), method: :put %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
<% else %>
  <h3> trash is empty. </h3>
<% end %>

<%= link_to 'View Lists', lists_path %>

<div style="float: right;">
  <%= will_paginate @lists %>
</div>

